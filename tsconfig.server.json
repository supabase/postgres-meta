{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "outDir": "bin",
    "sourceMap": true,
    "target": "esnext",

    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  }
}
